export GTK_IM_MODULE=gcin
export QT_IM_MODULE=gcin
export XMODIFIERS="@im=gcin"

gcin_exist=`ps -ef | grep -v grep | grep gcin`
if [ "x" = "x$gcin_exist" ]; then
  exec /usr/bin/gcin &
fi

